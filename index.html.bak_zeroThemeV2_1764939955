  <script>
    function copyToClaude() {
      const src = document.getElementById("openai-input");
      const dst = document.getElementById("claude-input");
      if (!src || !dst) return;
      dst.value = src.value;
      dst.focus();
      dst.selectionStart = dst.value.length;
      dst.selectionEnd = dst.value.length;
    }

    function copyToOpenAI() {
      const src = document.getElementById("claude-input");
      const dst = document.getElementById("openai-input");
      if (!src || !dst) return;
      dst.value = src.value;
      dst.focus();
      dst.selectionStart = dst.value.length;
      dst.selectionEnd = dst.value.length;
    }

    function setOutput(id, text) {
      const box = document.getElementById(id);
      if (!box) return;
      box.innerHTML = "";
      box.textContent = text;
    }

    function sendToOpenAI() {
      const prompt = document.getElementById("openai-input").value.trim();
      if (!prompt) {
        setOutput("openai-output", "[Demo] √ñnce soldaki alana bir ≈üey yaz.");
        return;
      }
      setOutput(
        "openai-output",
        "[Demo] Buraya ger√ßek OpenAI cevabƒ± gelecek.\n\nPrompt:\n" + prompt
      );
    }

    function sendToClaude() {
      const prompt = document.getElementById("claude-input").value.trim();
      if (!prompt) {
        setOutput("claude-output", "[Demo] √ñnce saƒüdaki alana bir ≈üey yaz.");
        return;
      }
      setOutput(
        "claude-output",
        "[Demo] Buraya ger√ßek Claude cevabƒ± gelecek.\n\nPrompt:\n" + prompt
      );
    }
  </script>
